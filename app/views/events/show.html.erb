<% provide(:title, "View Event") %>

<section class="page">
<div class="container">
<div class="row">

  
<h1 class="wow fadeInDown"><%= @event.event_name %></h1>


<div class="row">
<div class="col-md-6">
  
  <div class="field">
    <strong>Date</strong>
    <div class="field" id="event-det">
      <%= @event.date.strftime("%A, %b %d, %Y") %>
    </div>
  </div>
  
  <div class="field">
    <strong>Time</strong>
    <div class="field" id="event-det">
      <%= @event.time.strftime("%l:%M %p") %>
    </div>
  </div>
  
  <div class="field">
    <strong>Details</strong>
    <div class="field" id="event-det">
      <%= @event.desription %>
    </div>
  </div>
  
  <div class="field">
    <strong>Hosted By</strong>
    <div class="field" id="event-det">
      <% @owner = User.find(@event.user_id) %>
      <%= image_tag @owner.image.url(:thumb) %>
      <%= @owner.first_name %> <%= @owner.last_name %>
    </div>
  </div>
  
</div>


<div class="col-md-6">
  <div class="field">
    <strong>Location</strong>
  </div>
  <div class="field">
    <%= @event.location %>
  </div>
  <div class="field">
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}" %>
  </div>
</div>


</div>


</br>
</br>

<% if current_user.id == @event.user_id %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', events_path %>

</div>
</div>
</section>