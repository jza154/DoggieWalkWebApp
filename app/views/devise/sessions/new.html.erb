<% provide(:title, "Sign In") %>

<section id="form-section"> <!-- Reuses contact section's CSS -->
<div class="container">
<div class="row">
<div class="col-md-6">
  
<h1 class="wow fadeInDown">Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>
  
  <% if devise_mapping.rememberable? -%>
  <div id="tick-box-div">
    <div id="tick-box-c">
      <%= f.check_box :remember_me %>
    </div>
    <div id="tick-box-r">
      <%= f.label :remember_me %>
    </div>
  </div>
  <% end -%>

  <%= f.submit "Log in", :class=>"btn-send" %>
<% end %>

<br />

<!-- Taking out forget password b/c it doesn't work -->
<!--<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />-->

</div>


<div class="col-md-6 text-center wow fadeInDown" id="right-side-center">
<!--<%= render "devise/shared/links" %>-->
  First time here? <br />
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
</div>

</div>
</div>
</section>