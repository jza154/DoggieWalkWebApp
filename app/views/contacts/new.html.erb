<% provide(:title, "Contact Us") %>

<section id="contact-section">
    <div class ="container">
        <div class="row">
            <div class="col-md-6">
                <div class="block">
                    
                    <h2 class="subtitle wow fadeInDown">Contact Us</h2>
                    
                    <p class="subtitle-des wow fadeInDown">
                        Do you have a question, comment, suggestion, or concern?
                        Don't hesitate to shoot us a message using the form below!
                        We will get back to you in 1-2 business days.
                        Looking forward to hearing from you!
                    </p>
                    
                    <div class="contact-form">
                        <%= form_for(@contact) do |f| %>
                        <%= f.text_field :first_name, :placeholder => "Your Name" %>
                        <br />
                        <%= f.text_field :last_name, :placeholder => "Last name" %>
                        <br />
                         <%= f.text_field :subject, :placeholder => "Subject" %>
                        <br />
                        <%= f.email_field :email, :placeholder => "Your Email" %>
                        <br />
                        <%= f.text_area :message, :placeholder => "Message" %>
                        <br />
                        <%= f.submit "Send" %>
                        <% end %>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>