<% provide(:title, "User Directory") %>

<br/><br/>

<div class="container">

<h1>User Directory</h1>


<%= will_paginate %>
<table>
    <thead>
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Rating</th>
        <th colspan="3"></th>
    </tr>
    </thead>
    
    <%= form_tag(users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
    <%= submit_tag "Search" %>
    <% end %>
    
    <br /><br />
    
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <!--<td>< %= gravatar_for (user) %></td> -->
                <td><%= image_tag user.image.url(:thumb)%></td>
                <td><%= user.first_name %> <%= user.last_name %></td>
                <!--<td>< %= user.last_name %></td>-->
                <!--<td>< %= user.email %></td>-->
                
                <% @reviews = Review.where(receiver_id: user.id) %>
                <% if @reviews.blank? %>
                  <% @avg_review = 0 %>
                <% else %>
                  <% @avg_review = @reviews.average(:rating) %>
                <% end %>
                
                <td><div class="star-rating" data-score= <%= @avg_review %> ></div></td>
                <td><%= link_to 'View', user_path(user) %></td>
                <!--<td>< %= link_to 'Edit', edit_user_path(user) %></td>-->
                <!--<td>< %= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>-->
            </tr>
        <% end %>
    </tbody>
    
</table>

<%= will_paginate %>

</div>

<script>
    $('.star-rating').raty({
      starOn: '<%= image_path('star-on.png') %>',
      starHalf: '<%= image_path('star-half.png') %>',
      starOff: '<%= image_path('star-off.png') %>',
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>

