<% provide(:title, "User Directory") %>
<script src="/assets/jquery.raty.js?body=1" type="text/javascript"></script>

<section class="page">
<div class="container">
<div class="row">

<h1>User Directory</h1>


<%= will_paginate %>
<table>
    <thead>
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Rating</th>
        <th colspan="3"></th>
    </tr>
    </thead>
    
    <%= form_tag(users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
    <%= submit_tag "Search" %>
    <% end %>
    
    <br /><br />
    
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <!--<td>< %= gravatar_for (user) %></td> -->
                <td><%= image_tag user.image.url(:thumb)%></td>
                <td><%= user.first_name %> <%= user.last_name %></td>
                <!--<td>< %= user.last_name %></td>-->
                <!--<td>< %= user.email %></td>-->
                
                <% @reviews = Review.where(receiver_id: user.id) %>
                <% if @reviews.blank? %>
                  <% @avg_review = 0 %>
                <% else %>
                  <% @avg_review = @reviews.average(:rating) %>
                <% end %>
                
                <td><div class="star-rating" data-score= <%= @avg_review %> ></div></td>
                <td><%= link_to 'View', user_path(user) %></td>
        <% end %>
    </tbody>
    
</table>

<%= will_paginate %>


<script>
    $('.star-rating').raty({
      path: '/assets',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>

</div>
</div>
</section>