<script src="/assets/jquery.raty.js?body=1" type="text/javascript"></script>

<%= form_for([@receiver, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div id="star-rating"></div>
    <!--< %= f.label :rating %><br>-->
    <!--< %= f.number_field :rating %>-->
    <% if @review.rating != nil %>
      <div>
        You are now editing your previous rating for <%= @receiver.first_name %>.
      </div>
      <div>
        Your previous rating was <%= @review.rating %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions col-md-6">
    <%= f.submit %>
  </div>
<% end %>


<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]',
  });
</script>